                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <Border.Effect>
                        <DropShadowEffect Opacity="0.145" />
                    </Border.Effect>
                    <Grid x:Name="grid" HorizontalAlignment="Center"
                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Path x:Name="path" Data="M3.9999999,45.238523 L3.9999999,22.194635 C3.9999999,14.070662 6.4421046,4.0197173 21.658138,4.020052 C36.874169,4.0203866 41.268198,13.568148 41.187153,22.194633 L41.187153,37.00499"
                              Fill="Transparent" 
                              HorizontalAlignment="Center" 
                              Height="50"
                              Stroke="White" 
                              StrokeThickness="8"
                              VerticalAlignment="Top"
                              Width="45.188" 
                              RenderTransformOrigin="0.5,0.5" 
                              Margin="0,0,0,60">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="0.045187999999999562" Y="0.021000000000000626"/>
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>

                        <Rectangle x:Name="rectangle" Fill="#FF5D6FD0"
                                   Height="50" 
                                   Stroke="White"
                                   Width="65"
                                   Visibility="Visible"
                                   StrokeThickness="8"
                                   RadiusY="8.5" 
                                   RadiusX="8.5" RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel Margin="15, 0"
                            VerticalAlignment="Center">
                    <Label Content="Account"
                           FontSize="24"
                           Foreground="WhiteSmoke"
                           HorizontalAlignment="Center"
                           Margin="0, 0, 0, 10"
                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                    <Grid Margin="0, 0, 0, 20">
                        <TextBox x:Name="TextBox" Style="{DynamicResource SimpleBlackTextBox}"
                                 Height="50"
                                 IsEnabled="False">
                        </TextBox>
                        <TextBlock Text="Username"
                                   x:Name="WatermarkLogin"
                                   FontSize="16"
                                   Margin="10, 0, 0, 0"
                                   VerticalAlignment="Center"
                                   FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"
                                   Foreground="WhiteSmoke"/>
                        <TextBox FontSize="16"
                                 SnapsToDevicePixels="True"
                                 VerticalContentAlignment="Bottom"
                                 GotFocus="LoginBox_GotFocus"
                                 LostFocus="LoginBox_LostFocus"
                                 Background="Transparent"
                                 x:Name="LoginBox"
                                 Foreground="WhiteSmoke"
                                 Height="50"
                                 FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"
                                 Padding="7, 0, 0, 5"
                                 Style="{DynamicResource SimpleBlackTextBox}"/>
                    </Grid>

                    <Grid Margin="0, 0, 0, 20">
                        <PasswordBox x:Name="passwordBox" Height="50"
                                     IsEnabled="False"
                                     Style="{DynamicResource SimpleBlackPasswordBox}" RenderTransformOrigin="0.5,0.5">
                            <PasswordBox.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </PasswordBox.RenderTransform>
                        </PasswordBox>
                        <TextBlock Text="Password"
                                   x:Name="WatermarkPassword"
                                   FontSize="16"
                                   Margin="10, 0, 0, 0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"
                                   RenderOptions.ClearTypeHint="Auto"
                                   FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"
                                   Foreground="WhiteSmoke" RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <PasswordBox FontSize="10"
                                     Padding="6, 0, 0, -15"
                                     VerticalContentAlignment="Center"
                                     GotFocus="PasswordBox_GotFocus"
                                     LostFocus="PasswordBox_LostFocus"
                                     Background="Transparent"
                                     x:Name="PasswordBox"
                                     Foreground="WhiteSmoke"
                                     Height="50"
                                     FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"
                                     Style="{DynamicResource SimpleBlackPasswordBox}" RenderTransformOrigin="0.5,0.5">
                            <PasswordBox.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </PasswordBox.RenderTransform>
                        </PasswordBox>

                    </Grid>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0, 10, 0, 0">
                        <Button Width="150"
                                Height="40"
                                x:Name="SignUpBtn"
                                Click="SignUpBtn_Click"
                                Margin="0, 0, 20, 0" 
                                Content="Sign Up"
                                FontSize="16"
                                Foreground="#efefef"
                                Style="{DynamicResource OutlineButton}"
                                FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                        <Button Width="120" 
                                x:Name="LoginBtn"
                                IsDefault="True"
                                Style="{DynamicResource FilledBlueButton}"
                                FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"
                                FontSize="16"
                                Foreground="#efefef"
                                Content="Login"
                                Click="LoginBtn_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
