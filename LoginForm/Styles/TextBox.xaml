                    <Storyboard>
                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)">
                            <EasingColorKeyFrame KeyTime="0" Value="#FF5D6FD0"/>
                            <EasingColorKeyFrame KeyTime="0:0:0.3" Value="#005D6FD0"/>
