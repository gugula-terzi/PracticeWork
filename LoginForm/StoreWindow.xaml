    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="20"/>
    </WindowChrome.WindowChrome>

    <Grid Margin="10">
        <Border Background="#FF232323"
                CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                  Opacity="0.2" 
                                  Direction="-90"/>
            </Border.Effect>
        </Border>

        <Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border CornerRadius="15 0 0 15" 
                            Background="#FF1B1B1B">
                    </Border>
                    <StackPanel Width="230"
                                Height="100"
                                Margin="0 10 0 0"
                                VerticalAlignment="Top">
                        <Border CornerRadius="10"
                                Background="#59000000">
                            <Image Source="Images/logo.png" 
                                   Width="200"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Margin="10 20 10 20"/>
                        </Border>

                    </StackPanel>

                    <StackPanel VerticalAlignment="Center"
                                Margin="15">
                        <Button Height="50"
                                HorizontalContentAlignment="Left"
                                Style="{DynamicResource MenuButton}"
                                Name="GraphicsCardTableBtn"
                                Click="GraphicsCardTableBtn_Click"
                                Padding="10, 0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/background/graphics-card.png"
                                       Width="35"
                                       Height="35"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="Graphics Cards"
                                           Margin="15, 0, 0, 0"
                                           FontSize="18"
                                           VerticalAlignment="Center" FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </Button>
                        <Button Height="50"
                                HorizontalContentAlignment="Left"
                                Style="{DynamicResource MenuButton}"
                                Name="ProcessorTableBtn"
                                Click="ProcessorTableBtn_Click"
                                Padding="13, 0"
                                Margin="0, 10">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Stretch">
                                <Image Source="Images/background/chip.png"
                                       Width="30"
                                       Height="30"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="Processors"
                                           FontSize="18"
                                           Margin="18, 0, 0, 0"
                                           TextOptions.TextHintingMode="Animated"                                           
                                           VerticalAlignment="Center" 
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </Button>
                        <Button Height="50"
                                Style="{DynamicResource MenuButton}"
                                Name="RAMTableBtn"
                                HorizontalContentAlignment="Left"
                                Click="RAMTableBtn_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/background/ram.png"
                                       VerticalAlignment="Center"
                                       Width="50"
                                       Height="50"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="RAM"
                                           FontSize="18"
                                           Margin="10, 0, 0, 0"
                                           VerticalAlignment="Center" 
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </Button>
                        <Button Height="50"
                                Style="{DynamicResource MenuButton}"
                                Name="SSDTableBtn"
                                Margin="0 10"
                                HorizontalContentAlignment="Left"
                                Click="SSDTableBtn_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/background/ssd-storage.png"
                                       VerticalAlignment="Center"
                                       Width="35"
                                       Height="35"
                                       Margin="8 0 0 0"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="SSD drives"
                                           FontSize="18"
                                           Margin="15, 0, 0, 0"
                                           VerticalAlignment="Center" 
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </Button>
                        <Button Height="50"
                                Style="{DynamicResource MenuButton}"
                                Name="HDDTableBtn"
                                HorizontalContentAlignment="Left"
                                Click="HDDTableBtn_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/background/hdd.png"
                                       VerticalAlignment="Center"
                                       Width="30"
                                       Height="30"
                                       Margin="10 0 0 0"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="HDD drives"
                                           FontSize="18"
                                           Margin="18, 0, 0, 0"
                                           VerticalAlignment="Center" 
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </Button>
                        <Button Height="50"
                                Style="{DynamicResource MenuButton}"
                                Name="WaterCoolingTableBtn"
                                Margin="0 10"
                                HorizontalContentAlignment="Left"
                                Click="WaterCoolingTableBtn_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/background/fan_water.png"
                                       VerticalAlignment="Center"
                                       Width="35"
                                       Height="35"
                                       Margin="10 0 0 0"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="Water cooling"
                                           FontSize="18"
                                           Margin="15, 0, 0, 0"
                                           VerticalAlignment="Center" 
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </Button>
                        <Button Height="50"
                                Style="{DynamicResource MenuButton}"
                                Name="TowerCoolingTableBtn"
                                HorizontalContentAlignment="Left"
                                Click="TowerCoolingTableBtn_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/background/fan.png"
                                       VerticalAlignment="Center"
                                       Width="35"
                                       Height="35"
                                       Margin="10 0 0 0"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="Tower cooling"
                                           FontSize="18"
                                           Margin="15, 0, 0, 0"
                                           VerticalAlignment="Center" 
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </Button>
                        <Button Height="50"
                                Style="{DynamicResource MenuButton}"
                                Name="PowerSupplyTableBtn"
                                Margin="0 10"
                                HorizontalContentAlignment="Left"
                                Click="PowerSupplyTableBtn_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/background/power-supply.png"
                                       VerticalAlignment="Center"
                                       Width="35"
                                       Height="35"
                                       Margin="10 0 0 0"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="Power supply"
                                           FontSize="18"
                                           Margin="15, 0, 0, 0"
                                           VerticalAlignment="Center" 
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                                VerticalAlignment="Stretch"
                                Name="NavPanel"
                                Margin="20"
                                Background="Transparent" 
                                MouseDown="NavPanel_MouseDown">
                        <Button Height="35"
                                Width="35"
                                HorizontalAlignment="Right"      
                                VerticalAlignment="Top"
                                x:Name="Close"
                                Click="Close_Click"
                                Style="{DynamicResource OutlineButton}">
                            <materialDesign:PackIcon Kind="Close"
                                         Width="29"
                                         Height="29"
                                         Foreground="white"/>
                        </Button>
                        <Button Width="130"
                                Height="45"
                                Padding="10 0"
                                HorizontalAlignment="Left"
                                Style="{DynamicResource FilledBlueButton}"
                                Margin="0, 0, 0, 0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cart"
                                                     Width="30"
                                                     Height="30"/>
                                <TextBlock Text="Basket"
                                           FontWeight="Bold"
                                           Margin="10 0 0 0"
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"
                                           VerticalAlignment="Center"
                                           FontSize="20"/>
                            </StackPanel>
                        </Button>
                        <Button Width="130"
                                Height="45"
                                Padding="10 0"
                                HorizontalAlignment="Left"
                                Style="{DynamicResource FilledBlueButton}"
                                Margin="150, 0, 0, 0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LogoutVariant"
                                                     Width="30"
                                                     Height="30"/>
                                <TextBlock Text="Logout"
                                           Margin="10 0 0 0"
                                           FontWeight="Bold"
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"
                                           VerticalAlignment="Center"
                                           FontSize="20"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid Margin="20, 0, 20, 20">
                            <ListBox Background="Transparent"
                                     Name="ProductsList"
                                     BorderThickness="2"
                                     BorderBrush="#FF5D6FD0"
                                     ScrollViewer.CanContentScroll="False"
                                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                     HorizontalContentAlignment="Stretch" Style="{DynamicResource ListBoxStyle1}">
                            </ListBox>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
