<Window x:Class="LoginForm.StoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LoginForm"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ClipToBounds="False"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextHintingMode="Animated"
        MinWidth="1200"
        MinHeight="750"
        Title="StoreWindow" Height="750" Width="1200">

    <Window.Resources>
        <DataTemplate x:Key="GraphicsCardsItemTemplate">
            <Grid>
                <Border CornerRadius="10" Background="#FF151515"/>
                <StackPanel Margin="20"
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Path=ProductName}"
                                FontSize="20"
                                Margin="0, 0, 0, 10"
                                Foreground="#FFAEAEE2"
                                FontWeight="Bold" 
                                FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Stretch">
                        <Grid Width="200"
                              Height="200"
                              Background="#4C000000">
                            <Border CornerRadius="10"/>
                            <Image Width="200"
                                   Height="200"
                                   Source="{Binding Path=Image}"/>
                        </Grid>
                        <StackPanel Margin="10, 10, 150, 10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="VRAM Type: "
                                           FontSize="16"
                                           Foreground="white"
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                                <TextBlock Text="{Binding Path=VRAMType}"
                                           FontSize="16"
                                           Foreground="white"
                                           FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="VRAM Capacity: "
                                            FontSize="16"
                                            Foreground="white"
                                            FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                                <TextBlock Text="{Binding Path=VRAMCapacity, StringFormat={}{0} GB}"
                                            FontSize="16"
                                            Foreground="white"
                                            FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Bus with: "
                                            FontSize="16"
                                            Foreground="white"
                                            FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                                <TextBlock Text="{Binding Path=BusWidth}"
                                            FontSize="16"
                                            Foreground="white"
                                            FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Connectors: "
                                            FontSize="16"
                                            Foreground="white"
                                            FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                                <TextBlock Text="{Binding Path=Connectors}"
                                            FontSize="16"
                                            Foreground="white"
                                            FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <Grid HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0 0 50 0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Path=Price, StringFormat={}{0}$}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Margin="0, 0, 0, 10"
                                            Foreground="white"
                                            FontFamily="/LoginForm;component/Fonts/#Rounded Mplus 1c"/>
                        <Button Width="100"
                                        Height="35"
                                        Style="{DynamicResource FilledBlueButton}"
                                        Margin="0, 0, 5, 0">
                            <materialDesign:PackIcon Kind="Cart"
                                                            Width="25"
                                                            Height="25"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
